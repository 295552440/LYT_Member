<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

	<constant name="struts.devMode" value="true" />
	<!-- 前台能够调用后台的公共静态方法 -->
	<constant name="struts.ognl.allowStaticMethodAccess" value="true" />

	<constant name="struts.ObjectFactory" value="spring" />



	<package name="admin" namespace="/admin" extends="struts-default,json-default">

		<!-- Manager -->

		<action name="adminLogin" class="adminAction">
			 
			<result name="success">/admin/framework/main.jsp</result>
		</action>


        <action name="showMemberList" class="lytHuiyuanAction" method="showMemberList">
			 
			<result name="success">/admin/memberList.jsp</result>
		</action>

        <action name="queryByOrder" class="lytHuiyuanAction" method="queryByOrder">
			 
			<result name="success">/admin/memberList.jsp</result>
		</action>
        <action name="queryByState" class="lytHuiyuanAction" method="queryByState">
			<result name="success">/admin/memberList.jsp</result>
		</action>
		<action name="queryBySearch" class="lytHuiyuanAction" method="queryBySearch">
			<result name="success">/admin/memberList.jsp</result>
		</action>
		<action name="updateState" class="lytHuiyuanAction" method="updateState">
			<result name="success">/admin/memberList.jsp</result>
		</action>
		
		
		
		
		<action name="addLytHuiyuan" class="lytHuiyuanAction" method="addLytHuiyuan">
			<result name="error">/admin/login.jsp</result>
			<result name="success" type="chain">showMemberList</result>
			<result name="input" type="redirect">
				<!-- /admin/addMember.jsp?msg=${message} -->
				<param name="location">/admin/addMember.jsp</param>
				<param name="msg">${message}</param>
			</result>
		</action>
		
		
		
		
		
	</package>
	
	<!-- 会员 -->
	
	<package name="main" namespace="/main" extends="struts-default,json-default">
		<action name="queryById" class="com.lyt.member.action.LytHuiyuanAction" method="queryById">
			<result name="error">/main/main.jsp</result>
			<result name="success" >/main/main.jsp</result>
			
		</action>
		<action name="queryByTypeHy" class="com.lyt.member.action.LytHuiyuanAction" method="queryByTypeHy">
			<result name="error">/main/main.jsp</result>
			<result name="success" type="redirect" >/main/main.jsp</result>
			
		</action>



	</package>












	




</struts>
